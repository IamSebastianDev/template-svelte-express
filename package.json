{
  "private": true,
  "type": "module",
  "devDependencies": {
    "@commitlint/cli": "^17.1.2",
    "@commitlint/config-conventional": "^17.1.0",
    "@rollup/plugin-commonjs": "^24.1.0",
    "@rollup/plugin-json": "^6.0.0",
    "@rollup/plugin-node-resolve": "^15.0.0",
    "@rollup/plugin-replace": "^5.0.0",
    "@tsconfig/svelte": "^4.0.1",
    "@types/compression": "^1.7.2",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.14",
    "alex": "^11.0.0",
    "ava": "^5.2.0",
    "c8": "^7.13.0",
    "esbuild": "^0.17.18",
    "husky": "^8.0.1",
    "nodemon": "^2.0.20",
    "prettier": "^2.7.1",
    "pretty-quick": "^3.1.3",
    "rollup": "^3.7.3",
    "rollup-plugin-cleanup": "^3.2.1",
    "rollup-plugin-esbuild": "^5.0.0",
    "rollup-plugin-rld": "^1.2.0",
    "rollup-plugin-scss": "4",
    "rollup-plugin-svelte": "^7.1.0",
    "rollup-plugin-terser": "^7.0.2",
    "sass": "^1.55.0",
    "stylelint": "^15.6.1",
    "stylelint-config-prettier": "^9.0.3",
    "stylelint-config-prettier-scss": "^1.0.0",
    "stylelint-config-standard": "^33.0.0",
    "stylelint-config-standard-scss": "^9.0.0",
    "svelte": "^3.54.0",
    "svelte-check": "^3.3.2",
    "svelte-preprocess": "^5.0.3",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.4"
  },
  "scripts": {
    "reset": "node ./reset.js",
    "preci": "rm -rf node_modules",
    "ci": "yarn install --frozen-lockfile",
    "postinstall": "npx husky install",
    "build": " rollup -c .config/rollup.config.js",
    "build:production": "NODE_ENV=production yarn build",
    "dev": "yarn build --watch",
    "dev:dockerized": "docker compose up",
    "serve": "nodemon ./server/dist/index.js --config .config/nodemon.config.json",
    "start": "node server/dist/index.js",
    "start:production": "NODE_ENV=production yarn start",
    "lint": "alex . && alex . --html && npx stylelint '**/*.(scss|css)'",
    "docker:build": "node ./docker-build.js",
    "docker:up": "docker compose up -d",
    "docker:down": "docker compose down",
    "docker:stop": "docker compose stop",
    "docker:deploy": "yarn docker:build && docker compose -f docker-compose.prod.yml up",
    "docker:destroy": "docker compose -f docker-compose.prod.yml down",
    "db:up": "docker compose -f docker-compose.db.yml up",
    "db:down": "docker compose -f docker-compose.db.yml down",
    "db:stop": "docker compose -f docker-compose.db.yml stop",
    "test": "ava",
    "test:coverage": "c8 yarn run test"
  },
  "dependencies": {
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "helmet": "^7.0.0"
  },
  "ava": {
    "extensions": {
      "ts": "module"
    },
    "nodeArguments": [
      "--no-warnings",
      "--loader=ts-node/esm",
      "--experimental-specifier-resolution=node"
    ]
  }
}
